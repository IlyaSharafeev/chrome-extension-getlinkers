{
  "name": "GetLinkersImage",
  "version": "1.0.0",
  "description": "Getting links on a page",
  "manifest_version": 3,
  "author": "Sharafeev Ilya",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "action":{
    "default_popup": "index.html",
    "default_title": "Latest Covid Report"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["main.css"]
  }],
  "background": {},
  "permissions": ["scripting", "activeTab"]
}
